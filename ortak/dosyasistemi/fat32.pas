      // bir sonraki dizin giriþini oku
      MD^.FD^.SektorOku(MD^.FD, ADizinGirisi^.IlkSektor + DI^.ZincirNo,
        1, @DizinBellekAdresi);

      Inc(DI^.ZincirNo);

      DI^.KayitSN := 0;
