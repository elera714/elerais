      begin

      end
      else
      begin

        Result := 0;
        TumGirislerOkundu := True;
      end;
    end;

    // bir sonraki girdiye konumlan
    Inc(DI^.KayitSN);
    if(DI^.KayitSN = 16) then
      DI^.KayitSN := -1
    else Inc(DizinGirdisi);

    { TODO - kontrol edilerek aktifleþtirilecek }
